@model ch16.Models.Delivery

@{
    ViewBag.Title = "EditDel";
}

<h2><img src="~/images/editorial-design.png" width="50" /><label color: #fff;>修改外送員資訊</label></h2>
<p>
    
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.did)

        <div class="form-group">
            @Html.LabelFor(model => model.duserid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.duserid)
            </div>
        </div>                

        <div class="form-group">
            @Html.LabelFor(model => model.dname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dname, new { htmlAttributes = new { @class = "form-control", type = "text", maxlength = "20", required = "required" } })
                @Html.ValidationMessageFor(model => model.dname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dphone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dphone, new { htmlAttributes = new { @class = "form-control", type = "tel", minlength = "10", maxlength = "10", required = "required" } })
                @Html.ValidationMessageFor(model => model.dphone, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定修改" class="btn btn-success" />
            </div>
        </div>
    </div>
}

    <div>
        <button type="button" class="btn btn-link" style="font-size:medium" onclick="location.href='@Url.Action("DemoDel", "Delivery")'">
            <span class="glyphicon glyphicon-hand-left"></span> 返回
        </button>
        @*@Html.ActionLink("返回", "DemoDel")*@
    </div>
