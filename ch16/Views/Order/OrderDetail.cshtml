@model ch16.Models.CVMdemu
@{
    ViewBag.Title = "OrderDetail";
}

<h2><img src="~/images/list.png" width="50" /><label color: #fff;> 訂單詳情</label></h2>
<div class="row">
    <div class="col-xs-6">
        <label font-size: 30px; color: #fff;>訂單</label>
        <table class="table table-bordered">
            @foreach (var item in Model.order)
            {
                <tr>
                    <td>
                        收件人:
                    </td>
                    <td>
                        @item.receiver
                    </td>
                </tr>
                <tr>
                    <td>
                        電話:
                    </td>
                    <td>
                        @item.phone
                    </td>
                </tr>                
                <tr>
                    <td>
                        狀態:
                    </td>
                    <td>
                        @item.ostatus
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>                        
                        <input type="button" value="接受訂單" onclick="location.href='@Url.Action("btn1","Order", new { id=item.orderguid})'" class="btn btn-primary" />
                        @Html.ActionLink("接受訂單", "btn1", new { id = item.orderguid })                        
                        <input type="button" value="拒絕訂單" onclick="location.href='@Url.Action("RefuseOrder","Order", new { id=item.orderguid})'" class="btn btn-warning" />
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-xs-6">
        <label font-size: 30px; color: #fff;>餐點</label>
        <table class="table table-striped">
            <tr>
                <td>
                    <img src="~/images/dish.png" width="30" />餐點
                </td>
                <td>
                    <img src="~/images/hand.png" width="30" />價錢
                </td>
                <td>
                    訂購數量
                </td>
                <td>
                    總價 @ViewBag.sum
                </td>
            </tr>
            @foreach(var item in Model.menu)
            {
                <tr>
                    <td>
                        @item.mname
                    </td>
                    <td>
                        @item.mprice
                    </td>
                    <td>
                        @item.mqty
                    </td>
                    <td>
                        @ViewBag.price
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
