@model IEnumerable<ch16.Models.Order>

@{
    ViewBag.Title = "HistoryOrder";
}

<h2><img src="~/images/medical-result.png" width="50" /><label color: #fff;> 歷史訂單</label></h2>
<div class="row">    
    <div class="col-xs-12">
        <table class="table table-striped">
            <tr>
                <th>
                    取餐時間
                </th>
                <th>
                    訂單編號
                </th>
                <th>
                    訂購人
                </th>               
                <th>
                    取餐方式
                </th>               
                <th>
                    訂單進度
                </th>
                <th></th>                
            </tr>
            @foreach (var item in Model)
            {               
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.odate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.orderguid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cuserid)
                    </td>
                    <td>
                        <img src="~/images/@item.oway" width="30" />
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ostatus)
                    </td>
                    <td>
                        <button type="button" class="btn btn-link" style="font-size:medium" onclick="location.href='@Url.Action("HistoryDetail", "Order", new { id = item.orderguid })'">
                            <span class="glyphicon glyphicon-list-alt"></span> 查看詳情
                        </button>
                        @*@Html.ActionLink("查看詳情", "HistoryDetail", new { id = item.orderguid })*@|
                        <button type="button" class="btn btn-link" style="font-size:medium" onclick="location.href='@Url.Action("OrderScore", "Order", new { id = item.orderguid })'">
                            <span class="glyphicon glyphicon-star-empty"></span> 查看評價
                        </button>
                        @*@Html.ActionLink("查看回報", "", new { id = item.orderguid })*@
                    </td>
                </tr>
            }

        </table>
    </div>
    
</div>


