@model ch16.Models.CVMdemu

@{
    ViewBag.Title = "ReportDetail";
}

<h2><img src="~/images/messages.png" width="50" /><label color: #fff;> 回報單詳情</label></h2>

<div class="row">
    <div class="col-xs-6">
        <label font-size: 30px; color: #fff;>回報單內容</label>
        <table class="table table-bordered">
            @foreach (var item in Model.sre)
            {
                <tr>
                    <td>
                        訂單編號:
                    </td>
                    <td>
                        @item.orderguid
                    </td>
                </tr>
                <tr>
                    <td>
                        訂購人:
                    </td>
                    <td>
                        @item.cuserid
                    </td>
                </tr>
            }
            @foreach (var item in Model.order)
            {
                <tr>
                    <td>
                        訂單時間:
                    </td>
                    <td>
                        @item.orderdate
                    </td>
                </tr>
                <tr>
                    <td>
                        收件人:
                    </td>
                    <td>
                        @item.receiver
                    </td>
                </tr>
                <tr>
                    <td>
                        電話:
                    </td>
                    <td>
                        @item.phone
                    </td>
                </tr>
                <tr>
                    <td>
                        狀態:
                    </td>
                    <td>
                        @item.ostatus
                    </td>
                </tr>
                <tr>
                    <td>
                        取餐方式:
                    </td>
                    <td>
                        <img src="~/images/@item.oway" width="30" />
                    </td>
                </tr>
            }
            @foreach (var item in Model.sre)
            {
                <tr>
                    <td>
                        內容:
                    </td>
                    <td>
                        @item.srcontent
                    </td>
                </tr>
                <tr>
                    <td>
                        處理:
                    </td>
                    <td>
                        @ViewBag.rep
                        @item.srreply
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <button type="button" class="btn btn-link" style="font-size:medium" onclick="location.href='@Url.Action("Report", "Order")'">
                        <span class="glyphicon glyphicon-hand-left"></span> 返回
                    </button>
                </td>
            </tr>
        </table>
    </div>
    
    
        <div class="col-xs-6">
            <label font-size: 30px; color: #fff;>餐點</label>
            <table class="table table-striped">
                <tr>
                    <td>
                        <img src="~/images/dish.png" width="30" />餐點
                    </td>
                    <td>
                        <img src="~/images/hand.png" width="30" />價錢
                    </td>
                    <td>
                        訂購數量
                    </td>
                    <td>
                        總價
                    </td>
                </tr>
                @{
                    var b = ViewBag.price;
                }
                @{
                    int c = 0;
                }
                @foreach (var item in Model.menu)
                {
                    <tr>
                        <td>
                            @item.mname
                        </td>
                        <td>
                            @item.mprice
                        </td>
                        <td>
                            @item.mqty
                        </td>
                        <td>
                            @b[c].ToString()
                        </td>
                    </tr>
                    c = c + 1;
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        <label font-size: 30px; color: #fff;>總共:</label>
                    </td>
                    <td>@ViewBag.sum</td>
                </tr>
            </table>
        </div>
    </div>
