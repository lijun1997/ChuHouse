@model ch16.Models.CVMdemu
@{
    ViewBag.Title = "ODdelready";
}

<h2>訂單詳情</h2>
<div class="row">
    <div class="col-xs-6">
        <label font-size: 30px; color: #fff;>訂單</label>
        <table class="table table-bordered">
            @foreach (var item in Model.order)
            {
                <tr>
                    <td>
                        收件人:
                    </td>
                    <td>
                        @item.receiver
                    </td>
                </tr>
                <tr>
                    <td>
                        電話:
                    </td>
                    <td>
                        @item.phone
                    </td>
                </tr>
                <tr>
                        <td>
                            地址:
                        </td>
                        <td>
                            @item.address
                        </td>
                    </tr>
                <tr>
                    <td>
                        狀態:
                    </td>
                    <td>
                        @item.ostatus
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <img src="~/images/2.png" width="30" />
                        @Html.ActionLink("餐點完成", "ODdelready2", new { id = item.orderguid })                        
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-xs-6">
        <label font-size: 30px; color: #fff;>餐點</label>
        <table class="table table-striped">
            <tr>
                <td>
                    餐點
                </td>
                <td>
                    價錢
                </td>
                <td>
                    訂購數量
                </td>
                <td>
                    總價 @ViewBag.sum
                </td>
            </tr>
            @foreach (var item in Model.menu)
            {
                <tr>
                    <td>
                        @item.mname
                    </td>
                    <td>
                        @item.mprice
                    </td>
                    <td>
                        @item.mqty
                    </td>
                    <td>
                        @ViewBag.price
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
