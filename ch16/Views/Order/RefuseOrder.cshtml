@model ch16.Models.Order

@{
    ViewBag.Title = "RefuseOrder";
}

<h2><label color: #fff;> 填寫拒絕原因</label></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.oid)

        <div class="form-group">
            @Html.LabelFor(model => model.note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea id="note" name="note" rows="15" cols="150" type = "text" maxlength="200" required="required"></textarea>
                @*@Html.EditorFor(model => model.note, new { htmlAttributes = new { @class = "form-control", maxlength = "200", required = "required" } })*@
                @Html.ValidationMessageFor(model => model.note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="送出" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
