@model ch16.Models.CVMdemu
@{
    ViewBag.Title = "Detail1";
}
<h2><img src="~/images/list.png" width="50" /><label color: #fff;> 訂單詳情</label></h2>

<div class="row">
    <div class="col-xs-6">        
        <table class="table table-hover">
            @foreach (var item in Model.order)
            {
                <tr>
                    <td>
                        收件人:
                    </td>
                    <td>
                        @item.receiver
                    </td>
                </tr>
                <tr>
                    <td>
                        電話:
                    </td>
                    <td>
                        @item.phone
                    </td>
                </tr>               
                <tr>
                    <td>
                        地址:
                    </td>
                    <td>
                        @item.address
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>                        
                        @Html.ActionLink("餐點確認完畢，出發外送", "Detail11", new { id = item.orderguid })
                    </td>
                </tr>
            }
        </table>
    </div>


    <div class="col-xs-6">
        <label font-size: 30px; color: #fff;>餐點</label>
        <table class="table table-striped">
            <tr>
                <td>
                    <img src="~/images/dish.png" width="30" />餐點
                </td>
                <td>
                    <img src="~/images/hand.png" width="30" />價錢
                </td>
                <td>
                    訂購數量
                </td>
                <td>
                    確認
                </td>
            </tr>            
            
            @foreach (var item in Model.menu)
            {
                <tr>
                    <td>
                        @item.mname
                    </td>
                    <td>
                        @item.mprice
                    </td>
                    <td>
                        @item.mqty
                    </td>
                    <td>
                        <input type="checkbox" id="1" name="check" value="1" />
                    </td>
                </tr>
            }

            <tr>
                <td></td>
                <td></td>
                <td>總共:</td>
                <td>@ViewBag.sum</td>
            </tr>
        </table>
    </div>
</div>
