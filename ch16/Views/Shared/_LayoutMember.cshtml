
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title ChuHouse揪好食</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        .navbar {
            background-color: powderblue; /*背景顏色*/
        }

            .navbar .navbar-brand {
                color: darkslateblue; /*標題文字顏色*/
                font-size: 20px;
                font-weight: bold;
            }

                .navbar .navbar-brand:hover,
                .navbar .navbar-brand:focus {
                    color: darksalmon; /*標題文字反白*/
                }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ChuHouse揪好食", "DemoOrder", "Order", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a>@Session["Welcome"]</a></li>
                    <li>@Html.ActionLink("店家管理", "About", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">訂單管理<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("目前訂單", "DemoOrder", "Order")</li>
                            <li>@Html.ActionLink("歷史訂單", "HistoryOrder", "Order")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("餐點管理", "Index", "Menu")</li>
                    <li>@Html.ActionLink("外送管理", "DemoDel", "Delivery")</li>
                    <li>@Html.ActionLink("回報", "Report", "Order")</li>
                    <li>@Html.ActionLink("登出", "Logout", "Home")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year ChuHouse揪好食</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
